#!/usr/bin/env ruby
require 'pry'
require_relative '../config/environment'

class MusicLibraryController

    def initialize(path ="./db/mp3s/")
    importer = MusicImporter.new(path)
    importer.importer
    end

    def call
      input = " "
      if input ! = "exit"
      puts "Welcome to the Music Library!"
      puts "What would you like to do?"
      input = gets.strip
      if input == "list songs"
        list_songs
      end
  end

        def list_songs(song)
          list_songs
          puts "Which song would you like to play?"
          input = gets.strip
          play_song
        end

        def list_artists
          list_artists
          puts "Please select an Artist"
          inputs = gets.strip
          play_song
        end

      def list genres
        
      end
    
      when "list artist"
      list_songs_by_artist
      when "list genre"
        list_songs_by_genre
